{
  "manifest_version": 3,
  "name": "n8n Agent Chat",
  "version": "1.0.1",
  "description": "Chat with your n8n agents from any Chrome tab",
  "permissions": ["sidePanel", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_title": "Open n8n Agent Chat"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
